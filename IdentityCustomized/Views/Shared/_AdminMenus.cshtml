@model List<IdentityCustomized.Models.Permission>

@if (Model.Any())
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-cogs"></i> مدیریت سایت <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            @foreach (var permission in Model)
            {
                <li>                
                    <a href="@Url.Content($"~/{permission.PermissionGroup.PermissionGroupTitle}/{permission.PermissionTitle}")">
                        <i class="@permission.PermissionIcon"></i>
                        @(string.IsNullOrEmpty(permission.PermissionTitleLocalized) ? permission.PermissionTitle : permission.PermissionTitleLocalized)
                    </a>
                </li>
            }
        </ul>
    </li>
}
